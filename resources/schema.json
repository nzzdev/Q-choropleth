{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Q-choropleth",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, was in der Grafik zu sehen ist&#46;"
      }
    },
    "baseMap": {
      "title": "Basiskarte",
      "type": "string",
      "default": "hexagonCHCantons",
      "enum": ["hexagonCHCantons"],
      "Q:options": {
        "enum_titles": ["Hexagon Schweiz (Kantone)"],
        "notificationChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/hasValues",
              "fields": ["data"]
            },
            "priority": {
              "type": "low",
              "value": 1
            }
          }
        ]
      }
    },
    "entityType": {
      "title": "Geo-Code",
      "type": "string",
      "default": "name",
      "enum": ["bfsNumber", "name", "code"],
      "Q:options": {
        "enum_titles": ["BfS Nummer", "Name", "Abkürzung"]
      }
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "Q:options": {
        "allowTranspose": false,
        "dynamicSchema": {
          "type": "ToolEndpoint",
          "config": {
            "endpoint": "dynamic-schema/predefinedContent",
            "fields": ["baseMap", "entityType"]
          }
        },
        "notificationChecks": [
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/predefinedContent",
              "fields": ["data"]
            },
            "priority": {
              "type": "low",
              "value": 1
            }
          },
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/unsupportedValuesForType",
              "fields": ["data", "options.choroplethType"]
            },
            "priority": {
              "type": "medium",
              "value": 2
            }
          },
          {
            "type": "ToolEndpoint",
            "config": {
              "endpoint": "notification/moreThanTwoColumns",
              "fields": ["data"]
            },
            "priority": {
              "type": "low",
              "value": 1
            }
          }
        ]
      },
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "minItems": 1
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "Q:options": {
              "placeholder": "Direktlink zur Quelle, http://..."
            },
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "choroplethType": {
          "title": "Choroplethentyp",
          "type": "string",
          "enum": ["numerical", "categorical"],
          "default": "numerical",
          "Q:options": {
            "selectType": "radio",
            "enum_titles": ["numerisch", "kategorisch"]
          }
        },
        "numericalOptions": {
          "title": "Optionen numerische Karte",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/isNumerical",
                  "fields": ["options.choroplethType"]
                }
              }
            ]
          },
          "properties": {
            "noValuesOnMap": {
              "title": "Beschriftung der Werte auf der Karte entfernen",
              "type": "boolean",
              "default": false
            },
            "labelLegend": {
              "title": "Mittelwert-Markierung",
              "type": "string",
              "default": "noLabel",
              "enum": ["noLabel", "average", "median"],
              "Q:options": {
                "enum_titles": [
                  "ausblenden",
                  "zeigt Durchschnitt an",
                  "zeigt Median an"
                ]
              }
            },
            "bucketType": {
              "title": "Bucketing Methode",
              "type": "string",
              "default": "ckmeans",
              "enum": ["ckmeans", "quantile", "equal", "custom"],
              "Q:options": {
                "enum_titles": [
                  "Jenks Natural Breaks",
                  "Quantile",
                  "gleich grosse Intervalle",
                  "manuelle Grenzen"
                ],
                "notificationChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "notification/numberBucketsOutOfColorScale",
                      "fields": ["options"]
                    },
                    "priority": {
                      "type": "medium",
                      "value": 2
                    }
                  }
                ]
              }
            },
            "customBuckets": {
              "title": "Manuelle Bucketgrenzen",
              "type": "string",
              "Q:options": {
                "placeholder": "z.B. 5, 15, 20, 30",
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/customBuckets",
                      "fields": ["options.numericalOptions.bucketType"]
                    }
                  }
                ],
                "notificationChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "notification/customBuckets",
                      "fields": ["data", "options"]
                    },
                    "priority": {
                      "type": "medium",
                      "value": 2
                    }
                  }
                ]
              }
            },
            "numberBuckets": {
              "title": "Anzahl Buckets",
              "type": "number",
              "default": 5,
              "minimum": 2,
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/numberBuckets",
                      "fields": ["options.numericalOptions.bucketType"]
                    }
                  }
                ],
                "notificationChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "notification/numberBucketsTooLarge",
                      "fields": ["data", "options"]
                    },
                    "priority": {
                      "type": "medium",
                      "value": 2
                    }
                  }
                ]
              }
            },
            "scale": {
              "title": "Skala",
              "type": "string",
              "Q:options": {
                "selectType": "select",
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/scale",
                    "fields": ["options.numericalOptions"]
                  }
                }
              },
              "default": "sequential"
            },
            "colorScheme": {
              "title": "Farbschema",
              "type": "string",
              "default": "one",
              "Q:options": {
                "selectType": "select",
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/colorScheme",
                    "fields": ["options.numericalOptions.scale"]
                  }
                }
              }
            },
            "colorOverwrites": {
              "type": "array",
              "title": "Bucketfarbe",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "UserHasRole",
                    "config": {
                      "role": "expert-choropleth"
                    }
                  },
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/customColors",
                      "fields": ["options.numericalOptions.scale"]
                    }
                  }
                ],
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/colorOverwrites",
                    "fields": [
                      "options.choroplethType",
                      "options.numericalOptions"
                    ]
                  }
                },
                "layout": "compact",
                "expandable": {
                  "itemLabelTemplate": "${color} - ${position}"
                },
                "sortable": false
              },
              "items": {
                "type": "object",
                "properties": {
                  "color": {
                    "title": "Farbe",
                    "type": "string",
                    "Q:type": "color"
                  },
                  "textColor": {
                    "title": "Textfarbe",
                    "type": "string",
                    "default": "light",
                    "enum": ["light", "dark"],
                    "Q:options": {
                      "selectType": "select",
                      "enum_titles": ["hell", "dunkel"]
                    }
                  },
                  "position": {
                    "title": "Position",
                    "oneOf": [
                      {
                        "type": "number"
                      },
                      {
                        "type": "null"
                      }
                    ],
                    "Q:options": {
                      "dynamicSchema": {
                        "selectType": "select",
                        "type": "ToolEndpoint",
                        "config": {
                          "endpoint": "dynamic-schema/colorOverwritesItem",
                          "fields": [
                            "options.choroplethType",
                            "options.numericalOptions"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "categoricalOptions": {
          "title": "Optionen kategorische Karte",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/isCategorical",
                  "fields": ["options.choroplethType"]
                }
              }
            ],
            "notificationChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "notification/numberCategoriesOutOfColorScale",
                  "fields": ["data", "options.choroplethType"]
                },
                "priority": {
                  "type": "medium",
                  "value": 2
                }
              }
            ]
          },
          "properties": {
            "valuesOnMap": {
              "title": "Werte direkt auf der Karte beschriften",
              "type": "boolean",
              "default": false
            },
            "colorOverwrites": {
              "type": "array",
              "title": "Kategorienfarbe",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "UserHasRole",
                    "config": {
                      "role": "expert-choropleth"
                    }
                  }
                ],
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/colorOverwrites",
                    "fields": ["options.choroplethType", "data"]
                  }
                },
                "layout": "compact",
                "expandable": {
                  "itemLabelTemplate": "${color} - ${position}"
                },
                "sortable": false
              },
              "items": {
                "type": "object",
                "properties": {
                  "color": {
                    "title": "Farbe",
                    "type": "string",
                    "Q:type": "color"
                  },
                  "textColor": {
                    "title": "Textfarbe",
                    "type": "string",
                    "default": "light",
                    "enum": ["light", "dark"],
                    "Q:options": {
                      "selectType": "select",
                      "enum_titles": ["hell", "dunkel"]
                    }
                  },
                  "position": {
                    "title": "Position",
                    "oneOf": [
                      {
                        "type": "number"
                      },
                      {
                        "type": "null"
                      }
                    ],
                    "Q:options": {
                      "dynamicSchema": {
                        "selectType": "select",
                        "type": "ToolEndpoint",
                        "config": {
                          "endpoint": "dynamic-schema/colorOverwritesItem",
                          "fields": ["options.choroplethType", "data"]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["title"]
}
