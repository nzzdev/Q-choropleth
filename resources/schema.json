{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Q-choropleth",
  "properties": {
    "title": {
      "title": "Titel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Titel bringt die Kernaussage der Grafik auf den Punkt&#46;"
      }
    },
    "subtitle": {
      "title": "Untertitel",
      "type": "string",
      "Q:options": {
        "placeholder": "Der Untertitel benennt präzise, was in der Grafik zu sehen ist&#46;"
      }
    },
    "baseMap": {
      "title": "Basiskarte",
      "type": "string",
      "default": "hexagonCHCantons",
      "enum": ["hexagonCHCantons"],
      "Q:options": {
        "enum_titles": ["Hexagon Schweiz (Kantone)"]
      }
    },
    "data": {
      "title": "Daten",
      "type": "array",
      "Q:type": "table",
      "Q:options": {
        "allowTranspose": false,
        "notificationChecks": [
          {
            "type": "EmptyData",
            "config": {
              "fields": ["data"]
            },
            "priority": {
              "type": "low",
              "value": 1
            }
          },
          {
            "type": "TooManyColumns",
            "config": {
              "fields": ["data"],
              "options": {
                "limit": 2
              }
            },
            "priority": {
              "type": "medium",
              "value": 2
            }
          }
        ],
        "dynamicSchema": {
          "type": "ToolEndpoint",
          "config": {
            "endpoint": "dynamic-schema/baseMap",
            "fields": ["baseMap"]
          }
        }
      },
      "items": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "minItems": 1
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "Q:options": {
              "placeholder": "Direktlink zur Quelle, http://..."
            },
            "properties": {
              "url": {
                "title": "Url",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "valuesOnMap": {
          "title": "Werte direkt auf der Karte beschriften",
          "type": "boolean",
          "default": false
        },
        "bucketOptions": {
          "title": "Optionen für Bucketberechnung",
          "type": "object",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/hasBuckets",
                  "fields": ["data"]
                }
              }
            ]
          },
          "properties": {
            "labelLegend": {
              "title": "Mittelwert-Markierung",
              "type": "string",
              "default": "noLabel",
              "enum": ["noLabel", "average", "median"],
              "Q:options": {
                "enum_titles": [
                  "ausblenden",
                  "zeigt Durchschnitt an",
                  "zeigt Median an"
                ]
              }
            },
            "bucketType": {
              "title": "Bucketing Methode",
              "type": "string",
              "default": "ckmeans",
              "enum": ["ckmeans", "quantile", "equal", "custom"],
              "Q:options": {
                "enum_titles": [
                  "Jenks Natural Breaks",
                  "Quantile",
                  "gleich grosse Intervalle",
                  "manuelle Grenzen"
                ]
              }
            },
            "customBuckets": {
              "title": "Manuelle Bucketgrenzen",
              "type": "string",
              "Q:options": {
                "placeholder": "z.B. 5, 15, 20, 30",
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/customBuckets",
                      "fields": ["options.bucketOptions.bucketType"]
                    }
                  }
                ]
              }
            },
            "numberBuckets": {
              "title": "Anzahl Buckets",
              "type": "number",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/numberBuckets",
                      "fields": ["options.bucketOptions.bucketType"]
                    }
                  }
                ]
              }
            },
            "scale": {
              "title": "Skala",
              "type": "string",
              "Q:options": {
                "selectType": "select",
                "dynamicSchema": {
                  "type": "ToolEndpoint",
                  "config": {
                    "endpoint": "dynamic-schema/scale",
                    "fields": ["options.bucketOptions"]
                  }
                }
              },
              "default": "sequential"
            }
          }
        },

        "colorScheme": {
          "title": "Farbschema",
          "type": "string",
          "default": "one",
          "Q:options": {
            "selectType": "select",
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/colorScheme",
                "fields": ["options.bucketOptions.scale"]
              }
            },
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/hasBuckets",
                  "fields": ["data"]
                }
              }
            ]
          }
        },
        "colorOverwrites": {
          "type": "array",
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-choropleth"
                }
              },
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/customColors",
                  "fields": ["data", "options.bucketOptions"]
                }
              }
            ],
            "dynamicSchema": {
              "type": "ToolEndpoint",
              "config": {
                "endpoint": "dynamic-schema/colorOverwrites",
                "fields": ["data", "options.bucketOptions"]
              }
            },
            "layout": "compact",
            "expandable": {
              "itemLabelTemplate": "${color} - ${position}"
            },
            "sortable": false
          },
          "items": {
            "type": "object",
            "properties": {
              "color": {
                "title": "Farbe",
                "type": "string",
                "Q:type": "color"
              },
              "position": {
                "title": "Position",
                "oneOf": [
                  {
                    "type": "number"
                  },
                  {
                    "type": "null"
                  }
                ],
                "Q:options": {
                  "dynamicSchema": {
                    "selectType": "select",
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "dynamic-schema/colorOverwritesItem",
                      "fields": ["data", "options.bucketOptions"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["title"]
}
